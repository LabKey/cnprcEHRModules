    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="Weight" tableDbType="TABLE" useColumnOrder="true">
                <columns>
                    <column columnName="Id"/>
                    <column columnName="date">
                        <columnTitle>Weight Date</columnTitle>
                    </column>
                    <column columnName="weight">
                        <columnTitle>Weight (kg)</columnTitle>
                    </column>
                    <column columnName="bodyConditionScore">
                        <columnTitle>Body Condition Score</columnTitle>
                    </column>
                    <column columnName="weightTattooFlag">
                        <columnTitle>Tattoo Flag</columnTitle>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>