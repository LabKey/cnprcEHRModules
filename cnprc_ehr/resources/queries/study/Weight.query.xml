<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="Weight" tableDbType="TABLE" useColumnOrder="true">
                <columns>
                    <column columnName="Id"/>
                    <column columnName="date">
                        <columnTitle> Date</columnTitle>
                    </column>
                    <column columnName="weight">
                        <columnTitle>Weight (kg)</columnTitle>
                    </column>
                    <column columnName="bodyConditionScore">
                        <columnTitle>Condition</columnTitle>
                    </column>
                    <column columnName="weightTattooFlag">
                        <columnTitle>Tattoo </columnTitle>
                    </column>
                    <column columnName="projectCode">
                        <isHidden>true</isHidden>
                        <fk>
                            <fkDbSchema>cnprc_ehr</fkDbSchema>
                            <fkTable>project</fkTable>
                            <fkColumnName>projectCode</fkColumnName>
                            <fkDisplayColumnName>projectCode</fkDisplayColumnName>
                        </fk>
                    </column>
                    <column columnName="remark">
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="performedBy">
                        <isHidden>true</isHidden>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>