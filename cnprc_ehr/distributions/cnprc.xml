<?xml version="1.0" encoding="ISO-8859-1"?>

<project default="usage">
    <target name="distribution">
        <antcall target="gather_modules" />
        <fileset dir="${basedir}/../build/artifacts/cnprc" id="extra.files">
            <include name="*.jar"/>
        </fileset>
        <ant antfile="${basedir}/build.xml" target="package_redistributables">
            <property name="dist_sub.dir" value="cnprc" />
            <property name="skip.windowsInstaller" value="true" />
            <property name="skip.tarGZDistribution" value="true" />
            <property name="extraFileIdentifier" value="-cnprc" />
            <reference refid="extra.files"/>
        </ant>
    </target>

    <target name="gather_modules">
        <ant antfile="${basedir}/distributions/pro_plus.xml" target="gather_modules" />
        <copy todir="${dist.modules.dir}">
            <fileset dir="${staging.modules.dir}">
                <include name="cnprc_ehr.module" />
                <include name="cnprc_billing.module" />
                <include name="cnprc_genetics.module" />
                <include name="cnprc_pdl.module" />
                <include name="cnprc_complianceAndTraining.module" />
                <include name="ehr.module" />
                <include name="laboratory.module" />
                <include name="LDK.module" />
            </fileset>
        </copy>
    </target>

    <target name="usage">
        <echo>Not intended to be run directly</echo>
        <echo>Run `ant dist -Dname=distname` from the project root to prepare a particular distribution</echo>
    </target>

</project>
